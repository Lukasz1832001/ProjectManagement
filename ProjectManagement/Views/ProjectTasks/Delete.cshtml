@model ProjectManagement.Models.ProjectTask

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>@Html.DisplayFor(model => model.Name)</h4>
    <hr />
    <h5 class="card-title">Task Details</h5>
    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Name</th>
                <td>@Html.DisplayFor(model => model.Name)</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>@Html.DisplayFor(model => model.Description)</td>
            </tr>
            <tr>
                <th>Start Date</th>
                <td>@Model.StartDate.ToString("d")</td>
            </tr>
            <tr>
                <th>End Date</th>
                <td>@Model.EndDate.ToString("d")</td>
            </tr>
            <tr>
                <th>Project</th>
                <td>@Html.DisplayFor(model => model.Project.Name)</td>
            </tr>
            <tr>
                <th>User</th>
                <td>
                    @Html.DisplayFor(model => model.User.FirstName)&nbsp;
                    @Html.DisplayFor(model => model.User.LastName)&nbsp; 
                    (@Html.DisplayFor(model => model.User.UserName))
                </td>
            </tr>
            
        </tbody>
    </table>
    <form asp-action="Delete">
        <input type="hidden" asp-for="TaskId" />
        <a asp-controller="Projects" asp-action="Details" asp-route-id="@ViewBag.ProjectId" class="btn btn-secondary"><i class="bi bi-box-arrow-left mr-2"></i>Back</a>
        <button type="submit" class="btn btn-danger"><i class="bi bi-trash-fill mr-2"></i>Delete</button>
    </form>
</div>
