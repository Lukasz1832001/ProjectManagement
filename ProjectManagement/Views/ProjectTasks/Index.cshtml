@model IEnumerable<ProjectManagement.Models.ProjectTask>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>My Tasks</h1>
<div class="row">
    <div class="col" style="width: 50%;">
        <h2>Active</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StartDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EndDate)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    if(item.Status == false)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StartDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EndDate)
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.TaskId" class="btn btn-primary">Details</a> |
                                <a asp-action="ChangeStatus" asp-route-id="@item.TaskId" class="btn btn-success">Mark as Done</a>
                            </td>
                        </tr>
                    }    
                }
            </tbody>
        </table>

    </div>

    <div class="col" style="width: 50%;">
        <h2>Done</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StartDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EndDate)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    if (item.Status == true)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StartDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EndDate)
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.TaskId" class="btn btn-primary">Details</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>

    </div>

</div>

