@model ProjectManagement.Models.Team

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Team</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LeaderId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Leader.UserName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.TeamId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<h2>Team mebmers</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                UserName
            </th>
        </tr>
    </thead>
    <tbody>
        @if(Model.Users != null)
        {
            @foreach (var item in Model.Users)
            {
                <tr>
                    <td>
                        @item.UserName
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td>
                    Brak członków zespołu
                </td>
            </tr>
        }

    </tbody>
</table>
