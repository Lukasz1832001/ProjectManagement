@model ProjectManagement.Models.Risk

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Risk</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("Create", "Risks", FormMethod.Post))
        {
            <div>
                <label for="projectId">Project:</label>
                <input type="text" id="projectId" readonly value="@ViewBag.ProjectName" />
                <input type="hidden" name="projectId" value="@ViewBag.ProjectId" />
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea> 
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Probability" class="control-label"></label>
                <select asp-for="Probability" class="form-control" asp-items="ViewBag.ImpactCategories"></select>
            </div>
            <div class="form-group">
                <label asp-for="Influence" class="control-label"></label>
                <select asp-for="Influence" class="form-control" asp-items="ViewBag.ImpactCategories"></select>
            </div>
            <div class="form-group">
                <label asp-for="Reaction" class="control-label"></label>
                <input asp-for="Reaction" class="form-control" />
                <span asp-validation-for="Reaction" class="text-danger"></span>
            </div>

            <input type="submit" value="Add risk" class="btn btn-primary" />
        }
    </div>
</div>

<div>
    <a asp-controller="Projects" asp-action="Details" asp-route-id="@ViewBag.ProjectId">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
