@model ProjectManagement.Models.Project

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>@Html.DisplayFor(model => model.Name)</h4>
    <hr />
    <h5 class="card-title">Project Details</h5>
    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Name</th>
                <td>@Html.DisplayFor(model => model.Name)</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>@Html.DisplayFor(model => model.Description)</td>
            </tr>
            <tr>
                <th>Start Date</th>
                <td>@Model.StartDate.ToString("d")</td>
            </tr>
            <tr>
                <th>End Date</th>
                <td>@Model.EndDate.ToString("d")</td>
            </tr>
            <tr>
                <th>Total Budget</th>
                <td>@Html.DisplayFor(model => model.TotalBudget)&nbsp;$</td>
            </tr>
            <tr>
                <th>Project Scope</th>
                <td>@Html.DisplayFor(model => model.ProjectScope)</td>
            </tr>
            <tr>
                <th>Sponsor</th>
                <td>@Html.DisplayFor(model => model.Sponsor)</td>
            </tr>
            <tr>
                <th>Stakeholders</th>
                <td>@Html.DisplayFor(model => model.Stakeholders)</td>
            </tr>
        </tbody>
    </table>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ProjectId" />
        <a asp-controller="Projects" asp-action="Details" asp-route-id="@Model.ProjectId" class="btn btn-secondary"><i class="bi bi-box-arrow-left mr-2"></i>Back</a>
        <button type="submit" class="btn btn-danger"><i class="bi bi-trash-fill mr-2"></i>Delete</button>
    </form>
</div>
